# Production Environment Configuration for DigiCraft
# Copy this to .env for production deployment

# Application Settings
NODE_ENV=production
APP_PORT=6060
DOMAIN=digi-craft.digicraft.space
FRONTEND_URL=https://digi-craft.digicraft.space

# Security (CHANGE THESE IN PRODUCTION!)
SESSION_SECRET=your-super-secret-session-key-here-change-this
POSTGRES_PASSWORD=your_secure_password_change_this
REDIS_PASSWORD=your_redis_password_change_this

# Database (if using backend services)
DATABASE_URL=postgresql://digicraft_user:your_secure_password@postgres:5432/digicraft

# SSL/HTTPS Settings
SSL_CERT_PATH=/etc/ssl/certs/digi-craft.digicraft.space.crt
SSL_KEY_PATH=/etc/ssl/private/digi-craft.digicraft.space.key

# Monitoring
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=warn
